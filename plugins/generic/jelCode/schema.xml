<schema version="0.2">

	<!--
	 *
	 * TABLE jel_codes
	 *
	 -->
	<table name="jel_codes">
		<field name="jel_code_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="paper_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="sched_conf_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="code" type="C2" size="32">
			<NOTNULL/>
		</field>
		<field name="code_keyword" type="C2" size="255">
			<NOTNULL/>
		</field>
		<descr>Papers JEL Codes</descr>
	</table>

</schema>
